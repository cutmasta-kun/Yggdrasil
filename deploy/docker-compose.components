version: '3.9'

services:
## -- COMMUNICATION SECTION -- ##
  communication-hub:
    image: python:slim
    container_name: communication-hub
    working_dir: /app
    volumes:
      - ./../pkg/communication-hub:/app
    command: >
      /bin/sh -c "apt-get update && apt-get install -y procps 
      && pip install -r requirements.txt 
      && python -u main.py"
    cpu_shares: 256
    healthcheck:
      test: 
        - CMD-SHELL
        - pgrep -f 'main.py' || exit 1
      interval: 2s
      timeout: 2s
      retries: 3

  function-log-communication:
    image: python:slim
    container_name: function-log-communication
    working_dir: /app
    volumes:
      - ./../pkg/function-log-communication:/app
    ports:
      - "5000:5000"
    command: >
      /bin/sh -c "apt-get update && apt-get install -y procps 
      && pip install -r requirements.txt 
      && python -u main.py"
    cpu_shares: 1024
    healthcheck:
      test: 
        - CMD-SHELL
        - pgrep -f 'main.py' || exit 1
      interval: 2s
      timeout: 2s
      retries: 3

  south-bus:
    image: python:slim
    container_name: south-bus
    working_dir: /app
    volumes:
      - ./../pkg/plugin-send-ntfy:/app
    ports:
      - "5050:5050"
    environment:
      PORT: 5050
    command: >
      /bin/sh -c "apt-get update && apt-get install -y procps 
      && pip install -r requirements.txt 
      && python -u main.py"
    cpu_shares: 1024
