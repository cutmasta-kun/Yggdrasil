version: '3.9'

services:  
  plugin-search-arxiv:
    image: python:slim
    container_name: plugin-search-arxiv
    working_dir: /app
    volumes:
      - ./../pkg/plugin-search-arxiv:/app
    ports:
      - "5004:5004"
    command: /bin/sh -c "pip install -r requirements.txt && python -u main.py"
    cpu_shares: 1024
    healthcheck:
      test: 
        - CMD-SHELL
        - pgrep -f 'main.py' || exit 1
      interval: 2s
      timeout: 2s
      retries: 3